{
  "version": 3,
  "extra_config": {
    "security/cors": {
      "allow_origins": ["*"],
      "allow_methods": ["GET", "HEAD", "POST", "PUT", "DELETE", "OPTIONS"],
      "expose_headers": ["Content-Length", "Content-Type"],
      "allow_headers": ["Accept-Language", "Content-Type", "Authorization", "Accept", "Origin"],
      "max_age": "12h",
      "allow_credentials": false,
      "debug": false
    },
    "router": {
      "auto_options": true
    }
  },
  "endpoints": [
    {
      "endpoint": "/post",
      "method": "GET",
      "backend": [
        {
          "host": "http://post-service:3003",
          "method": "GET",
          "url_pattern": "/",
          "encoding": "json"
        }
      ]
    },
    {
      "endpoint": "/post",
      "method": "POST",
      "backend": [
        {
          "host": "http://post-service:3003",
          "method": "POST",
          "url_pattern": "/",
          "encoding": "json"
        }
      ]
    },
    {
      "endpoint": "/comment",
      "method": "GET",
      "backend": [
        {
          "host": "http://comment-service:3004",
          "method": "GET",
          "url_pattern": "/",
          "encoding": "json"
        }
      ]
    },
    {
      "endpoint": "/comment",
      "method": "POST",
      "backend": [
        {
          "host": "http://comment-service:3004",
          "url_pattern": "/",
          "method": "POST",
          "encoding": "json"
        }
      ]
    },
    {
      "endpoint": "/comment/byPostID/{id}",
      "method": "GET",
      "backend": [
        {
          "host": "http://comment-service:3004",
          "method": "GET",
          "url_pattern": "/byPostID/{id}",
          "encoding": "json"
        }
      ]
    },
    {
      "endpoint": "/user",
      "method": "GET",
      "backend": [
        {
          "host": "http://user-service:3002",
          "method": "GET",
          "url_pattern": "/",
          "encoding": "json"
        }
      ]
    },
    {
      "endpoint": "/user",
      "method": "POST",
      "backend": [
        {
          "host": "http://user-service:3002",
          "method": "POST",
          "url_pattern": "/",
          "encoding": "json"
        }
      ]
    }
  ]
}
